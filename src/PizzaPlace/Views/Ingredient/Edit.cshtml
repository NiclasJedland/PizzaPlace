@using System.Collections.Generic
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@model ViewModel
@{
	ViewBag.Title = "Ingredient Edit";
}
<h2>@ViewBag.Title</h2>
<a asp-controller="Ingredient" asp-action="Index">Back to Foods</a>

<div class="row">
	<div class="col-md-8">
		<section>
			<form asp-controller="Ingredient" asp-action="Edit" method="post" class="form form-horizontal">
				<h3>Ingredient id: @Model.Ingredient.Id</h3><hr />
				<div hidden>
					<label class="col-md-2" asp-for="Ingredient.Id"></label>
					<input readonly="readonly" asp-for="Ingredient.Id" />
					<span asp-validation-for="Ingredient.Id" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label class="col-md-2 control-label" asp-for="Ingredient.IngredientName"></label>
					<div class="col-md-10">
						<input asp-for="Ingredient.IngredientName" class="form-control" />
						<span asp-validation-for="Ingredient.IngredientName" class="text-danger"></span>
					</div>
				</div>
				<div class="form-group">
					<label class="col-md-2 control-label" asp-for="Ingredient.Price"></label>
					<div class="col-md-10">
						<input asp-for="Ingredient.Price" class="form-control" />
						<span asp-validation-for="Ingredient.Price" class="text-danger"></span>
					</div>
				</div>
				<div class="form-group">
					<div class="col-md-offset-2 col-md-10">
						<button type="submit" class="btn btn-default">Submit</button>
					</div>
				</div>
			</form>
		</section>
	</div>
</div>
@section Scripts {
	@{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
