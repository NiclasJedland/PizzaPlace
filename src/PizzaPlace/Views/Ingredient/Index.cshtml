@model ViewModel
@{
	ViewBag.Title = "Ingredient Index";
}
<h2>@ViewBag.Title</h2>

<div class="row">
	<div class="col-md-6">
		<a asp-controller="Admin" asp-action="Index">Back to Admin</a>
	</div>
	<div class="col-md-6 text-right">
		<a asp-controller="Ingredient" asp-action="Create">Create New Ingredient</a>
	</div>
</div>

<div class="row">
	<div col-md-12>
		<table class="table table-bordered table-hover table-striped text-center">
			<tr>
				<th>
					<label asp-for="Ingredient.IngredientName"></label>
				</th>
				<th>
					<label asp-for="Ingredient.Price"></label>
				</th>
				<th></th>
			</tr>

			@foreach(var item in Model.Ingredients.OrderBy(s => s.IngredientName))
			{
				<tr>
					<td>
						@item.IngredientName
					</td>
					<td>
						@item.Price
					</td>
					<td>
						<a asp-controller="Ingredient" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
						<a asp-controller="Ingredient" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
					</td>
				</tr>
			}
		</table>
	</div>
</div>