@model ViewModel
@using System.Collections.Generic
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication

@{
	ViewData["Title"] = "Register";
}

<h2>@ViewData["Title"].</h2>
<div class="row">
	<div class="col-md-8">
		<section>
			<form asp-controller="Account" asp-action="Register" method="post" class="form-horizontal">
				<hr />
				<div class="form-group">
					<label asp-for="Customer.AccountName" class="col-md-2 control-label"></label>
					<div class="col-md-10">
						<input asp-for="Customer.AccountName" class="form-control" />
						<span asp-validation-for="Customer.AccountName" class="text-danger"></span>
					</div>
				</div>
				<div class="form-group">
					<label asp-for="Customer.Password" class="col-md-2 control-label"></label>
					<div class="col-md-10">
						<input asp-for="Customer.Password" class="form-control" />
						<span asp-validation-for="Customer.Password" class="text-danger"></span>
					</div>
				</div>
				<div class="form-group">
					<label asp-for="Customer.FirstName" class="col-md-2 control-label"></label>
					<div class="col-md-10">
						<input asp-for="Customer.FirstName" class="form-control" />
						<span asp-validation-for="Customer.FirstName" class="text-danger"></span>
					</div>
				</div>
				<div class="form-group">
					<label asp-for="Customer.LastName" class="col-md-2 control-label"></label>
					<div class="col-md-10">
						<input asp-for="Customer.LastName" class="form-control" />
						<span asp-validation-for="Customer.LastName" class="text-danger"></span>
					</div>
				</div>
				<div class="form-group">
					<label asp-for="Customer.Address" class="col-md-2 control-label"></label>
					<div class="col-md-10">
						<input asp-for="Customer.Address" class="form-control" />
						<span asp-validation-for="Customer.Address" class="text-danger"></span>
					</div>
				</div>
				<div class="form-group">
					<label asp-for="Customer.Zip" class="col-md-2 control-label"></label>
					<div class="col-md-10">
						<input asp-for="Customer.Zip" class="form-control" />
						<span asp-validation-for="Customer.Zip" class="text-danger"></span>
					</div>
				</div>
				<div class="form-group">
					<label asp-for="Customer.City" class="col-md-2 control-label"></label>
					<div class="col-md-10">
						<input asp-for="Customer.City" class="form-control" />
						<span asp-validation-for="Customer.City" class="text-danger"></span>
					</div>
				</div>
				<div class="form-group">
					<label asp-for="Customer.Email" class="col-md-2 control-label"></label>
					<div class="col-md-10">
						<input asp-for="Customer.Email" class="form-control" />
						<span asp-validation-for="Customer.Email" class="text-danger"></span>
					</div>
				</div>
				<div class="form-group">
					<label asp-for="Customer.Phone" class="col-md-2 control-label"></label>
					<div class="col-md-10">
						<input asp-for="Customer.Phone" class="form-control" />
						<span asp-validation-for="Customer.Phone" class="text-danger"></span>
					</div>
				</div>


				<div class="form-group">
					<div class="col-md-offset-2 col-md-10">
						<button type="submit" class="btn btn-default">Register</button>
					</div>
				</div>
				<p>
					<a asp-controller="Account" asp-action="Login">Log in on an existing account?</a>
				</p>

			</form>
		</section>
	</div>



</div>

@section Scripts {
	@{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
