@model ViewModel
@using System.Collections.Generic
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication

@{
	ViewData["Title"] = "Log in";
}
<h2>@ViewData["Title"].</h2>
<div class="row">
	<div class="col-md-8">
		<section>
			<form asp-controller="Account" asp-action="Login" method="post" class="form-horizontal">
				<hr />
				<div class="form-group">
					<label asp-for="Customer.AccountName" class="col-md-2 control-label"></label>
					<div class="col-md-10">
						<input asp-for="Customer.AccountName" class="form-control" />
						<span asp-validation-for="Customer.AccountName" class="text-danger"></span>
					</div>
				</div>
				<div class="form-group">
					<label asp-for="Customer.Password" class="col-md-2 control-label"></label>
					<div class="col-md-10">
						<input asp-for="Customer.Password" class="form-control" />
						<span asp-validation-for="Customer.Password" class="text-danger"></span>
					</div>
				</div>
				<div class="form-group">
					<div class="col-md-offset-2 col-md-10">
						<button type="submit" class="btn btn-default">Log in</button>
					</div>
				</div>
				<p>
					<a asp-controller="Account" asp-action="Register">Register as a new user?</a>
				</p>

			</form>
		</section>
	</div>
</div>
@section Scripts {
	@{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
